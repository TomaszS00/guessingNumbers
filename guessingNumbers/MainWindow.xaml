<Window x:Class="guessingNumbers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:guessingNumbers"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <TextBox x:Name="txt" HorizontalAlignment="Center" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,184,0,0"/>
        <Button x:Name="draw_button" Click="draw_button_Click" Content="Check it!" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pl-pl" Text="Guess a number from 1 to 10"/></TextBlock>
        <TextBlock x:Name="answer"  HorizontalAlignment="Center" Margin="0,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Height="120" FontSize="18"/>
        <TextBlock x:Name="UserAnswer" HorizontalAlignment="Center" Margin="0,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Height="33" FontSize="18"/>

    </Grid>
</Window>
